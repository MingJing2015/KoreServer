
@{
    ViewBag.Title = "ShowList";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}


<div class="container body-content" style="margin-top:100px;">
    <div class="row">

        <div class="col-xs-12 col-sm-12 col-lg-12 col-md-12">

            <div class="panel panel-primary">

                <!-- Default panel contents -->

                <div class="panel-heading">
                    <h5 class="panel-title">Files Listing</h5>
                </div>


                <table class="table table-striped">
                    <tr>
                        <th>Full Name </th>
                        <th>CreationTime</th>
                        <th>Size</th>
                        <th>Type</th>
                    </tr>
                    @{
                        var liness = ViewBag.files;

                        foreach (var line in liness)
                        {
                            <tr>
                                <td>@Html.Raw(line.FullName)</td>
                                <td>@Html.Raw(line.CreationTime)</td>
                                <td>@Html.Raw(line.Length)</td>
                                <td>@Html.Raw(line.Extension)</td>
                            </tr>
                        }
                    }
                </table>
            </div>
        </div>
    </div>
</div>


